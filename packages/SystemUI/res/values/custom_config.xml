<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">

    <!-- Allow Opa (Pixel navbar) layout -->
    <bool name="config_allowOpaLayout">true</bool>

   <!-- configurable width dimension for the app sidebar trigger area -->
   <dimen name="config_app_sidebar_trigger_width">8dip</dimen>

    <!-- Navigation keys swaped layout -->
    <string name="config_navBarLayoutSwapped" translatable="false">left[.5W],recent[1WC];home;back[1WC],right[.5W]</string>

    <!-- Should we listen for fingerprints when the screen is off?  Devices
         with a rear-mounted sensor want this, but certain devices have
         the sensor embedded in the power key and listening all the time
         causes a poor experience. -->
    <bool name="config_fingerprintWakeAndUnlock">true</bool>

    <!-- Burn in protection -->
    <bool name="config_statusBarBurnInProtection">true</bool>
    <integer name="config_shift_interval">60</integer>

</resources>
