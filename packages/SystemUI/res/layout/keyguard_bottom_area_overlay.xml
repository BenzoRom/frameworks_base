<com.google.android.systemui.assist.LockscreenOpaLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lockscreen_opa"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center"
    android:paddingBottom="@dimen/opa_lockscreen_padding_bottom">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">

            <ImageView
                android:id="@+id/red"
                android:importantForAccessibility="no"
                android:layout_gravity="end"
                android:layout_marginEnd="-10dp"
                android:src="@drawable/ic_sysbar_opa_red"
                style="@style/LockscreenDotStyle" />

            <ImageView
                android:id="@+id/blue"
                android:importantForAccessibility="no"
                android:layout_gravity="end"
                android:layout_marginEnd="-10dp"
                android:src="@drawable/ic_sysbar_opa_blue"
                style="@style/LockscreenDotStyle" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">

            <ImageView
                android:id="@+id/green"
                android:importantForAccessibility="no"
                android:layout_gravity="start"
                android:layout_marginStart="-10dp"
                android:src="@drawable/ic_sysbar_opa_green"
                style="@style/LockscreenDotStyle" />

            <ImageView
                android:id="@+id/yellow"
                android:importantForAccessibility="no"
                android:layout_gravity="start"
                android:layout_marginStart="-10dp"
                android:src="@drawable/ic_sysbar_opa_yellow"
                style="@style/LockscreenDotStyle" />

        </FrameLayout>
    </LinearLayout>
</com.google.android.systemui.assist.LockscreenOpaLayout>
