<com.google.android.systemui.assist.OpaLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:systemui="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home"
    android:layout_width="@dimen/navigation_key_width"
    android:layout_height="fill_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_weight="0.0"
    android:paddingEnd="@dimen/navigation_key_padding"
    android:paddingStart="@dimen/navigation_key_padding">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:id="@+id/red"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_sysbar_opa_red"
            style="@style/DotStyle" />

        <ImageView
            android:id="@+id/blue"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_sysbar_opa_blue"
            style="@style/DotStyle" />

        <ImageView
            android:id="@+id/green"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_sysbar_opa_green"
            style="@style/DotStyle" />

        <ImageView
            android:id="@+id/yellow"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_sysbar_opa_yellow"
            style="@style/DotStyle" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/halo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:layout_gravity="center"
        android:scaleType="center" />

    <ImageView
        android:id="@+id/white_cutout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:importantForAccessibility="no"
        android:layout_gravity="center"
        android:scaleType="center" />

    <ImageView
        android:id="@+id/white"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:importantForAccessibility="no"
        android:layout_gravity="center"
        android:scaleType="center" />

    <com.android.systemui.navigationbar.buttons.KeyButtonView
        android:id="@+id/home_button"
        android:layout_width="@dimen/navigation_key_width"
        android:layout_height="fill_parent"
        android:contentDescription="@string/accessibility_home"
        android:layout_gravity="center"
        android:scaleType="center"
        systemui:keyCode="3" />
</com.google.android.systemui.assist.OpaLayout>
